<div class="row">

<!-- Profile and Connections -->
<div class="col-md-2 text-center">
<%= image_tag "stuker.jpg", class: "logo" %>
<hr>
<div class="timezone">
<p class="text-center"><b><%= Time.zone.name %> Timezone</b></p>
<%= link_to "change", edit_user_registration_path %>
</div>
<hr>

<div class="social">
<% unless current_user.connections.where(provider: "twitter").any? %>
	<%= link_to "/auth/twitter",:class=>"btn btn-block btn-social btn-twitter" do %>
	  <i class="fa fa-twitter"></i> Connect with Twitter
	<% end %>
<% else %>
	<%= link_to "/auth/twitter",:class=>"btn btn-block btn-social btn-twitter",:disabled=>true do %>
	  <i class="fa fa-twitter"></i> Connect with Twitter
	<% end %>
	<%= link_to "Delete Connection", connection_path(current_user.connections.where(provider: "twitter").first), method: :delete %>
<% end %>

<% unless current_user.connections.where(provider: "facebook").any? %>
	<%= link_to "/auth/facebook",:class=>"btn btn-block btn-social btn-facebook" do %>
